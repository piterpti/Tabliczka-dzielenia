<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.Game"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/game_progressTextView"
            android:text="1|10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:paddingLeft="20dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

        <Button
            android:textColor="#ffffff"
            android:id="@+id/game_backToMenu"
            android:text="@string/game_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:background="@drawable/mybutton"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/mybutton"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/game_taskTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15 / 3 = 5"
            android:gravity="center_horizontal"
            android:textSize="64sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            />

        <ProgressBar
            android:id="@+id/game_progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:scaleY="3"/>

        <TextView
            android:id="@+id/game_verdictTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DOBRZE!"
            android:gravity="center_horizontal"
            android:visibility="invisible"
            android:textSize="56sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:weightSum="1"
            android:gravity="bottom">

            <Button
                android:id="@+id/game_button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#ffffff"
                android:background="@drawable/mybutton"
                android:layout_weight="0.2"
                android:textSize="54sp"/>
            <Button
                android:id="@+id/game_button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_weight="0.2"
                android:textColor="#ffffff"
                android:background="@drawable/mybutton"
                android:textSize="54sp"/>
            <Button
                android:id="@+id/game_button3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_weight="0.2"
                android:textColor="#ffffff"
                android:background="@drawable/mybutton"
                android:textSize="54sp"/>
            <Button
                android:id="@+id/game_button4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_weight="0.2"
                android:textColor="#ffffff"
                android:background="@drawable/mybutton"
                android:textSize="54sp"/>
            <Button
                android:id="@+id/game_button5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_weight="0.2"
                android:textColor="#ffffff"
                android:background="@drawable/mybutton"
                android:textSize="54sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:weightSum="1">

            <Button
                android:id="@+id/game_button6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_weight="0.2"
                android:textColor="#ffffff"
                android:background="@drawable/mybutton"
                android:textSize="54sp"/>
            <Button
                android:id="@+id/game_button7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:layout_weight="0.2"
                android:textColor="#ffffff"
                android:background="@drawable/mybutton"
                android:textSize="54sp"/>
            <Button
                android:id="@+id/game_button8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_weight="0.2"
                android:textColor="#ffffff"
                android:background="@drawable/mybutton"
                android:textSize="54sp"/>
            <Button
                android:id="@+id/game_button9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:layout_weight="0.2"
                android:textColor="#ffffff"
                android:background="@drawable/mybutton"
                android:textSize="54sp"/>
            <Button
                android:id="@+id/game_button0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_weight="0.2"
                android:textColor="#ffffff"
                android:background="@drawable/mybutton"
                android:textSize="54sp"/>
        </LinearLayout>




    </LinearLayout>


</LinearLayout>
