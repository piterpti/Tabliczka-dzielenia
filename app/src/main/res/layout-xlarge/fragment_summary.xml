<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Summary"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:textSize="58sp"
                android:text="@string/end_gameEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="42sp"
                    android:text="@string/end_correctAnswers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/end_resultTv"
                    android:textSize="42sp"
                    android:text="1/10 (10%)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <wojcik.czarek.tabliczkadzielenia.NonScrollListView
                android:layout_marginTop="14dp"
                android:id="@+id/end_achListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:textSize="40sp"
                android:id="@+id/end_menuButton"
                android:layout_marginTop="12dp"
                android:text="@string/end_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:layout_gravity="center_horizontal"
                android:paddingRight="35dp"
                android:paddingLeft="35dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"/>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
